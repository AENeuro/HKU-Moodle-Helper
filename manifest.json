{
  "name": "HKU Moodle Helper",
  "version": "1.3.1",
  "description": "This extension allows HKU students to show your current courses (in a semester) in a separate entry in HKU Moodle. By: Andrew Z",
  "permissions": [
    "storage"
  ],
  "content_scripts": [
    {
      "matches": ["http://moodle.hku.hk/*", "https://moodle.hku.hk/*"],
      "css": ["myStyle.css"],
      "js": ["contentScript.js"],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "images/16.png",
    "32": "images/32.png",
    "48": "images/48.png",
    "128": "images/128.png"
  },
  "manifest_version": 2
}